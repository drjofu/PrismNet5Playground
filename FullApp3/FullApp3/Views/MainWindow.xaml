<Window x:Class="FullApp3.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       
        xmlns:core="clr-namespace:FullApp3.Core;assembly=FullApp3.Core"
        Title="{Binding Title}" Height="350" Width="525" >
  <StackPanel>
    <TextBlock>Start</TextBlock>
    <Border BorderBrush="Blue" BorderThickness="3" CornerRadius="5" Padding="5" Margin="5">
      <ContentControl Name="Region1"  MinHeight="50" MinWidth="100"/>
    </Border>
    <Border BorderBrush="DarkSeaGreen" BorderThickness="3" CornerRadius="5" Padding="5" Margin="5">
      <ContentControl Name="Region2"   MinHeight="50" MinWidth="100"/>
    </Border>
    <TextBlock>Ende</TextBlock>
  </StackPanel>
</Window>
